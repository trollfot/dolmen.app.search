<form id="searchbox"
      method="post"
      i18n:domain="dolmen.app.search"
      tal:attributes="action string:${view/application_url}/search.result">
  <input type="text"
         autocomplete="off"
         name="search_term"
         tal:attributes="value viewlet/term"
         id="search-widget" />

  <input type="submit"
         name="search_button"
         id="search-button"
         title="Search"
         alt="Search"
         i18n:attributes="value label_do_search; title label_do_search; alt label_do_search"
         value="Search" />
</form>
