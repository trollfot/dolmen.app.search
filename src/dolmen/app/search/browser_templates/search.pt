<form id="searchbox"
      method="post"
      i18n:domain="dolmen"
      tal:attributes="action string:${view/application_url}/search.result">
  <input type="text"
	 autocomplete="off"
	 name="search_term"
	 tal:attributes="value viewlet/term"
	 id="search-widget" />

  <input type="submit"
	 name="search_button"
	 id="search-button"
	 i18n:attributes="value search"
	 value="search" />
</form>
